<div class="container">
    <div class="margin">
      <div class="span12">

<div class="row">
  <% @articles[0..2].each do |article| %>
    <div class="span4">
      <div class="breadcrumb">
        <p class="article_title">
          <a href="<%= article['url'] %>" target="_blank">
          <%= truncate(format(article['title']), :length => 60)  %></a>
        </p>
        <hr>
        <p>
          <%= truncate(format(article['abstract']), :length => 200) %>
        </p>
      </div>
    </div>
  <% end %>

  <% @articles[3..10].each do |article| %>
    <div class="span3">
      <div class="breadcrumb_small">
        <p class="article_title_2">
          <a href="<%= article['url'] %>" target="_blank">
          <%= truncate(format(article['title']), :length => 50)  %></a>
        </p>
        <hr>
        <p class ="small_text">
          <%= truncate(format(article['abstract']), :length => 130) %>
        </p>
      </div>
    </div>
  <% end %>

  <% @articles[11..-2].each do |article| %>
    <div class="span6">
      <div class="breadcrumb_smallest">
        <p> <span class="article_title_2">
          <a href="<%= article['url'] %>" target="_blank">
          <%= truncate(format(article['title']), :length => 60)  %></a></span>
        <span class ="small_text">
          <%= truncate(format(article['abstract']), :length => 140) %></span>
      </p>
      </div>
    </div>
  <% end %>

</div>
